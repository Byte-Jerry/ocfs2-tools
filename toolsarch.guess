#! /bin/sh

srcdir=$1

host_alias=`$srcdir/config.guess`
host=`$srcdir/config.sub $host_alias`
host_cpu=`echo $host | sed 's/^\([^-]*\)-\([^-]*\)-\(.*\)$/\1/'`

case "$host_cpu" in
  x86_64|i386|ppc|ia64)
    echo "$host_cpu"
    ;;
  i486|i586|i686|i786|k6|k7)
    echo "i386"
    ;;
  powerpc64)
    echo "ppc"
    ;;
  *)
    echo "error"
    ;;
esac
